{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/*.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.mjs" },

    /* âœ… Rewrite all non-API routes (including /viewer) to the SPA */
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}

